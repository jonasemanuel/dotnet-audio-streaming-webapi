@model AudioStreaming.Admin.UserRequest;

<div class="flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6">Cadastro de Usuário</h2>
        <form method="post" asp-controller="Users" asp-action="Save">
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500"})
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-medium mb-2">Senha</label>
                @Html.PasswordFor(x => x.Password, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500"})
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-medium mb-2">Senha</label>
                @* @Html.TextBoxFor(x => x.Password, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500"}) *@
                <select asp-for="Role" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
                    <option value="0">Administrador</option>
                    <option value="1">Usuário</option>
                </select>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Cadastrar</button>
            </div>
        </form>
    </div>
</div>