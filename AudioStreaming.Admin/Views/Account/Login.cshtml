@model AudioStreaming.Admin.LoginRequest;

<body class="flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-4">
                <label for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
                <input type="email" id="Email" name="Email" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label for="Password" class="block text-gray-700 font-medium mb-2">Senha</label>
                <input type="password" id="Password" name="Password" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
            </div>
            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Entrar</button>
            </div>
        </form>
    </div>
</body>